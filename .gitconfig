[user]
	name = John Vrbanac
	email = john.vrbanac@linux.com

[alias]
    dl = diff HEAD~1
    dsl = diff HEAD~1 --stat
    fix = commit --amend
    pep8-last = !git diff HEAD~1 | flake8 --diff
    ru = remote update
    st = status
    plog = log --pretty=format:\"%Cgreen %h %Creset| %Cblue%G?%Creset | %ar | %aN | %Cblue%s\"
    hist = log --pretty=format:\"%Cred%h%Creset | %ad | %Cblue%aN%Creset %Cred%d%Creset %n %s %n \" --graph --date=local

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[diff]
	tool = bc3
[difftool]
	prompt = false
[difftool "bc3"]
	cmd=/usr/bin/bcompare $LOCAL $REMOTE
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[merge]
	tool = bc3
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "bc3"]
	cmd=/usr/bin/bcompare $LOCAL $REMOTE $BASE $MERGED
	trustExitCode = true
	keepBackup = false
[gui]
	historybrowser = gitg
[gitreview]
	username = john.vrbanac
